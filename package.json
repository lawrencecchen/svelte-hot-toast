{
	"name": "svelte-hot-toast",
	"version": "0.0.4",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"build-tailwind": "NODE_ENV=production npx tailwindcss --minify --config tailwind-build.config.cjs --output ./src/lib/dist/svelte-hot-toast.css",
		"package": "pnpm build-tailwind && svelte-kit package"
	},
	"devDependencies": {
		"@sveltejs/kit": "next",
		"@tailwindcss/forms": "^0.3.3",
		"@tailwindcss/line-clamp": "^0.2.1",
		"@tailwindcss/typography": "^0.4.1",
		"@typescript-eslint/eslint-plugin": "^4.28.4",
		"@typescript-eslint/parser": "^4.28.4",
		"autoprefixer": "^10.3.1",
		"eslint": "^7.31.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.0",
		"postcss": "^8.3.6",
		"prettier": "~2.2.1",
		"prettier-plugin-svelte": "^2.3.1",
		"svelte": "^3.40.2",
		"svelte-check": "^2.2.3",
		"svelte-hot-toast": "^0.0.3",
		"svelte-preprocess": "^4.7.4",
		"svelte2tsx": "^0.4.2",
		"tailwindcss": "^2.2.7",
		"tslib": "^2.3.0",
		"typescript": "^4.3.5"
	},
	"type": "module"
}
