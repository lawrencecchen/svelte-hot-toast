{
	"name": "svelte-hot-toast",
	"version": "0.0.6",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"build-tailwind": "NODE_ENV=production npx tailwindcss --minify --config tailwind-build.config.cjs --output ./src/lib/dist/svelte-hot-toast.css",
		"package": "pnpm build-tailwind && svelte-kit package",
		"publish": "pnpm publish ./package --access public"
	},
	"devDependencies": {
		"@sveltejs/kit": "next",
		"@tailwindcss/forms": "^0.3.4",
		"@tailwindcss/line-clamp": "^0.2.2",
		"@tailwindcss/typography": "^0.4.1",
		"@typescript-eslint/eslint-plugin": "^5.2.0",
		"@typescript-eslint/parser": "^5.2.0",
		"autoprefixer": "^10.3.7",
		"eslint": "^8.1.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"postcss": "^8.3.11",
		"prettier": "~2.4.1",
		"prettier-plugin-svelte": "^2.4.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.2.7",
		"svelte-hot-toast": "^0.0.5",
		"svelte-preprocess": "^4.9.8",
		"svelte2tsx": "^0.4.7",
		"tailwindcss": "^2.2.17",
		"tslib": "^2.3.1",
		"typescript": "^4.4.4"
	},
	"type": "module"
}
